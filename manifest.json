{
    "manifest_version": 3,
    "name": "עברית תקנית",
    "description": "מחליף את העברית בדפדפן שלך מעברית שפוצעת לך את הנשמה לעברית תקנית. מנטרל שפה מירב מיכאלית ורב-מגדרית ומחזיר אותך לקו השפיות.",
    "version": "1.0",
		"icons": {
		"16": "icon16.png",
		"32": "icon32.png",
		"48": "icon48.png",
		"128": "icon128.png"
	},
"content_scripts": [
			{
				"matches": ["<all_urls>"],
				"js": ["content.js"],
				"run_at": "document_start"
			}
		],
    "permissions": [
        "activeTab"
    ]
}